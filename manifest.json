// open in new tab
{
  "manifest_version": 3,
  "name": "My Links",
  "version": "1.0",
  "description": "All My Daily usage Links.",
  "permissions": ["tabs"],
  "action": {
    "default_icon": {
      "16": "./icon.png",
      "48": "./icon.png",
      "128": "./icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
